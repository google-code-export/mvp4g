<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:mail='urn:import:com.mvp4g.example.client'
	xmlns:mailView='urn:import:com.mvp4g.example.client.view'>

	<g:DockLayoutPanel unit='EM'>
		<g:north size='5'>
			<mailView:TopPanel ui:field='topPanel' />
		</g:north>

		<g:center>
			<g:SplitLayoutPanel>
				<g:west size='192'>
					<mailView:ShortcutsView ui:field='shortcuts' />
				</g:west>

				<g:north size='200'>
					<mailView:MailListView ui:field='mailList' />
				</g:north>

				<g:center>
					<mailView:MailDetailView ui:field='mailDetail' />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
